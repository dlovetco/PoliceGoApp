<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_background">

    <ImageView
        android:id="@+id/register_head_picture_imageview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/headpicture"
        app:layout_heightPercent="18.1%"
        app:layout_marginLeftPercent="34.2%"
        app:layout_marginTopPercent="13.9%"
        app:layout_widthPercent="33.1%" />

    <EditText
        android:id="@+id/input_phoneNum_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="0123456789"
        android:hint="+86输入手机号"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_heightPercent="6.5%"
        app:layout_marginLeftPercent="14.6%"
        app:layout_marginTopPercent="33.6%"
        app:layout_widthPercent="71.1%" />

    <EditText
        android:id="@+id/input_identify_code_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="0123456789"
        android:hint="短信验证码"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_heightPercent="6.5%"
        app:layout_marginLeftPercent="14.6%"
        app:layout_marginTopPercent="42.5%"
        app:layout_widthPercent="41.9%" />


    <Button
        android:id="@+id/get_code_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#0000"
        android:text="获取验证码"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_heightPercent="6.5%"
        app:layout_marginLeftPercent="58.6%"
        app:layout_marginTopPercent="42.5%"
        app:layout_widthPercent="27.4%" />

    <EditText
        android:id="@+id/input_password1_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789"
        android:hint="密码8~16位"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_heightPercent="6.5%"
        app:layout_marginLeftPercent="14.6%"
        app:layout_marginTopPercent="52.3%"
        app:layout_widthPercent="71.1%" />

    <EditText
        android:id="@+id/input_password2_edittext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:digits="qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM0123456789"
        android:hint="再次输入密码"
        android:inputType="textPassword"
        android:maxLength="16"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="14sp"
        app:layout_heightPercent="6.5%"
        app:layout_marginLeftPercent="14.6%"
        app:layout_marginTopPercent="61.8%"
        app:layout_widthPercent="71.1%"  />

    <Button
        android:id="@+id/finish_register_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/finish_register_button"
        app:layout_heightPercent="8.7%"
        app:layout_marginLeftPercent="37.8%"
        app:layout_marginTopPercent="68.7%"
        app:layout_widthPercent="23.9%" />


</android.support.percent.PercentRelativeLayout>
